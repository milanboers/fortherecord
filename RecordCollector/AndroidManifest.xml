<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.milanboers.recordcollector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.milanboers.recordcollector.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.milanboers.recordcollector.search.SearchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="nl.milanboers.recordcollector.master.MasterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_record" >
        </activity>
        <activity
            android:name="nl.milanboers.recordcollector.artist.ArtistActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_artist" >
        </activity>
        <activity
            android:name="nl.milanboers.recordcollector.image.ImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_image" >
        </activity>
        <activity
            android:name="nl.milanboers.recordcollector.news.NewsActivity"
            android:label="@string/title_activity_news" >
        </activity>
    </application>

</manifest>